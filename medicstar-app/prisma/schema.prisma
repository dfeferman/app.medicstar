// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Contact {
  id                                  Int       @id @default(autoincrement())
  shopifyCustomerId                   String
  email                               String
  businessCenterContactNo             String
  businessCenterCustomerTemplateCode  String

  @@index([businessCenterContactNo])
}

model Product {
  id                                  Int       @id @default(autoincrement())
  shopifyProductId                    String?
  title                               String
  vendor                              String
  SKU                                 String
  groupId                             Int
  description                         String?
  priceNetto                          Decimal  @db.Decimal(10, 2)
  quantity                            Int
  deliveryTime                        String
  collection1                         String
  collection2                         String?
  collection3                         String?
  collection4                         String?
  listOfAdvantages                    String?
  metaTitle                           String?
  metaDescription                     String?
  variants                            ProductVariant[]
  lastSyncedAt                        DateTime

  @@index([shopifyProductId], name: "product_shopifyId")
  @@index([groupId], name: "product_groupId")
  @@index([SKU], name: "product_SKU")
}

model ProductVariant {
  id                                  Int       @id @default(autoincrement())
  shopifyVariantId                    String?
  optionName                          String
  title                               String
  SKU                                 String
  groupId                             Int
  priceNetto                          Decimal  @db.Decimal(10, 2)
  quantity                            Int
  listOfAdvantages                    String?
  productId                           Int
  product                             Product @relation(fields: [productId], references: [id])
  lastSyncedAt                        DateTime

  @@index([shopifyVariantId], name: "productVariant_shopifyId")
  @@index([groupId], name: "productVariant_groupId")
  @@index([SKU], name: "productVariant_SKU")
}

model StatusFlag {
  id Int @id @default(autoincrement())
  shouldSuspiciousBeUpdated                  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model SyncProductsTask {
  id             Int                 @id @default(autoincrement())
  stage          StatusEnum
  inProgress     Boolean             @default(false)
  data           Json                @default("{}")
  retryCount     Int                 @default(0)
  error          String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  @@index([stage], name: "SyncProductsTaskStageIndex")
  @@index([inProgress, updatedAt], name: "SyncProductsTaskInProgressUpdatedAtIndex")
}

model Job {
  id            Int @id @default(autoincrement())
  status        Status
  logMessage    String?
  data          Json @default("{}")
  processes     Process[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status], name: "JobStatusIndex")
  @@index([createdAt], name: "JobCreatedAtIndex")
}

model Process {
  id          Int @id @default(autoincrement())
  status      Status
  type        ProcessType
  logMessage  String?
  data        Json @default("{}")
  jobId       Int
  job         Job @relation(fields: [jobId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status], name: "ProcessStatusIndex")
  @@index([createdAt], name: "ProcessCreatedAtIndex")
}

enum StatusEnum {
  START
  DOWNLOAD_FILE
  PARSE_FILE
  CREATE_BULK_TASK
  WAIT_FOR_FINISH
  DOWNLOAD_RESULT
  PROCESS_RESULT
  FINISH
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ProcessType {
  DOWNLOAD_FILE
  PARSE_FILE
  UPDATE_VARIANTS
  CREATE_NEXT_PROCESS
  FINISH
}
